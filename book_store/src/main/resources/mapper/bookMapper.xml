<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dkq.mapper.BookMapper">
<!--  查询所有书籍  -->
   <resultMap id="bookMap" type="Book">
       <id column="id" property="id"/>
       <association property="bookClass" javaType="Class">
           <id column="id" property="id"/>
       </association>
   </resultMap>
    <select id="queryAll" resultMap="bookMap">
        select * from book b,class c where b.classid = c.id
    </select>

<!--    根据id查询书籍-->
    <select id="queryById" resultType="Book">
        select * from book where id = #{id}
    </select>

    <update id="edit">
        update book set author=#{author},price=#{price},descr=#{descr} where id = #{id}
    </update>

<!--  删除书籍  -->
    <delete id="delete" >
        delete from book where id = #{id};
    </delete>
</mapper>